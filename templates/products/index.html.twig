{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="text-center my-5">Produits</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if products != [] %}
            <h3 class="mb-3">Tous les produits</h3>
            <div class="row">
                {% for product in products %}
                <div class="col-md-3">
                    <a href="{{ path('product', {id: product.id}) }}">
                        <div class="card">
                            <img src="{{ asset('assets/images/' ~ product.image) }}" alt="{{ product.name }}" class="card-img-top w-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <h6 class="card-subtitle">En stock: {{ product.quantity }}</h6>
                                <p class="card-text">Prix: {{ product.price }}€</p>
                            </div>
                        </div>
                    </a>
                </div>
                {% endfor %}
            </div>
        {% else %}
        <div class="text-center">
            <p>Il n'y a aucun produit enregistré :(</p>
        </div>
        {% endif %}

        <h3 class="my-3">Ajouter un produit</h3>
        <div class="form-group">
            {{ form(productForm) }}
        </div>
    </div>
{% endblock %}
